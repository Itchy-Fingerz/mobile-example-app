<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/gold"
        android:gravity="center"
        android:text="@string/validation_title"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="4"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/validation_logo"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/number_container"
                android:layout_alignEnd="@+id/number_container"
                android:layout_alignStart="@+id/number_container"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/validation_enter_phone_text"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/grey"
                android:textSize="14dp"/>

            <LinearLayout
                android:id="@+id/number_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/validation_typearea"
                android:gravity="center_vertical"
                android:weightSum="6">

                <TextView
                    android:id="@+id/number_country_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/validation_uae_flag"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="+971"
                    android:textColor="@color/grey"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/number_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5.5"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="9"
                    android:text=""
                    android:textColorHint="@color/lightgrey"
                    android:textSize="15sp"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/error_text"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="@string/validation_code_error_text"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3">

                    <ImageButton
                        android:id="@+id/verify_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/validation_verify_btn_states"/>

                    <TextView
                        android:id="@+id/verify_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/validation_verify_button_text"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>