<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/cache_clear_ceremony_view">
    
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
		android:background="@color/black"
		android:alpha="0.5"
		android:clickable="true"/>

    <RelativeLayout
    	android:id="@+id/cache_clear_ceremony_view_container"
	    android:layout_width="550dp"
	    android:layout_height="300dp"
	    android:layout_centerInParent="true"
	    android:paddingTop="10dp">
        
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="@color/gold"/>
		    
        <!-- Title bar -->
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:id="@+id/cache_clear_ceremony_view_header">
            
            <TextView
                android:id="@+id/cache_clear_ceremony_view_title"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/gold"
                android:textSize="18dp" />
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
	        android:layout_above="@+id/cache_clear_ceremony_view_footer"
	        android:layout_below="@+id/cache_clear_ceremony_view_header">
        
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_centerInParent="true"
	        android:background="@color/white"/>
	            
          	<RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
              
	            <TextView
	                android:id="@+id/cache_clear_ceremony_view_message"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center"
					android:text=""
	                android:textColor="@color/darkgrey"
	                android:textSize="16dp"
					android:layout_above="@+id/cache_clear_ceremony_view_spinner"
					android:layout_alignParentStart="true"
					android:layout_marginBottom="48dp" />

		       <ProgressBar
					android:id="@+id/cache_clear_ceremony_view_spinner"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:padding="5dp"
					android:gravity="center_vertical"
					android:layout_centerHorizontal="true"
					android:layout_alignParentBottom="true"
					android:background="@color/white" />

            </RelativeLayout>
            
        </RelativeLayout>
        
        <!--  Bottom bar with close button -->
        <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:id="@+id/cache_clear_ceremony_view_footer"
           android:background="@color/gold">
         
         <ImageView
             android:id="@+id/cache_clear_ceremony_confirm_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:background="@drawable/menu_button_color_states"
             android:src="@drawable/button_pin_ok_states" />
 
         <ImageView
             android:id="@+id/cache_clear_ceremony_close_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:background="@drawable/menu_button_color_states"
             android:src="@drawable/button_pin_close_states" />
         
         </RelativeLayout>
	        
	</RelativeLayout>
	
</RelativeLayout>
